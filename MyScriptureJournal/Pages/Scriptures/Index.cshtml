@page "{SearchString?}"
@model MyScriptureJournal.IndexModel

@{
    ViewData["Title"] = "Book";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Find:  By Book <select asp-for="BookList" asp-items="Model.Book">
            <option value="" width="200">All</option>
        </select>
        By Notes <input type="text" asp-for="NoteSearch" />
        <input type="submit" value="Filter" />
    
        
     </p>
</form>



<table class="table">
    <thead>
        <tr>
            
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.ScriptureList[0].Date) &#x23f7;

                </a>
            </th>
            <th width="100">
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.ScriptureList[0].Book) &#x23f7;
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureList[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureList[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureList[0].Note)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScriptureList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td width="100">
                    @Html.DisplayFor(modelItem => item.Chapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verse)
                </td>
                <td width="300">
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
